{
  "manifest_version": 2,

  "name": "Civcraft",
  "description": "Build with more than just blocks.",
  "version": "0.1",

  "permissions": [
    "http://skynet.nickg.org/*",
    "http://www.reddit.com/r/Civcraft/new/.json",
    "notifications"
  ],
  
  "background": {
    "scripts": ["js/background.js"]
  },
  
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_popup": "popup.html"
  },
  
  "web_accessible_resources": [
    "img/logo.png"
  ]
}